{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "lib": [
            "es6"
        ],
        "removeComments": true,
        "noLib": false,
        "outDir": "./build",
        "sourceMap": true,
        "skipLibCheck": true,
        "typeRoots": [
            "@types",
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/__tests__/*.ts",
        "extras",
        "*github",
        "_files",
        ".vscode",
        "fonts",
    ]
}